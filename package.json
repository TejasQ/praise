      "ts",
      "js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/puppeteer": "^1.3.2",
    "husky": "^0.14.3",
    "jest": "^23.0.0",
    "lint-staged": "^7.1.2",
    "prettier": "^1.12.1",
    "rollup": "^0.59.3",
    "rollup-plugin-typescript2": "^0.14.0",
    "ts-jest": "^22.4.6",
    "typescript": "^3.0.0-dev.20180526"
  }
